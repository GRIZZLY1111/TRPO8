<Page x:Class="TRPO8.Pages.Priem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Priem">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Width="310" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Идентификатор:"/>
                    <Label Content="Фамилия:"/>
                    <Label Content="Имя:"/>
                    <Label Content="Отчество:"/>
                    <Label Content="Номер телефона:"/>
                    <Label Content="Посещение: "/>
                    <Label Content="Индентификатор доктора: "/>
                    <Label Content="Диагноз: "/>
                    <Label Content="Рекомендации: "/>
                    <Button Click="ZapisPacientButton_Click" Content="Записать прием" Margin="4"/>
                    <Button Click="IzmeneniePacientButton_Click" Content="Изменить информацию" Margin="4"/>
                    <Button Click="BackButton_Click" Content="Назад"  Margin="4"/>
                </StackPanel>
                <StackPanel>
                    <TextBox Text="{Binding ZapisPacient.ID}" Width="140" Margin="4" IsEnabled="False"/>
                    <TextBox Text="{Binding ZapisPacient.LastName}" Margin="4" IsEnabled="False"/>
                    <TextBox Text="{Binding ZapisPacient.Name}" Margin="4" IsEnabled="False"/>
                    <TextBox Text="{Binding ZapisPacient.MiddleName}" Margin="4" IsEnabled="False"/>
                    <TextBox Text="{Binding ZapisPacient.PhoneNumber}" Margin="4" IsEnabled="False"/>
                    <DatePicker SelectedDate="{Binding Appointment}" Margin="4"/>
                    <TextBox Text="{Binding CurrentDoctor.ID}" Margin="4" IsEnabled="False"/>
                    <TextBox Text="{Binding Diagnosis}" Margin="4"/>
                    <TextBox Text="{Binding Recomendations}" Margin="4"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="5">
            <ListView ItemsSource="{Binding Posechenia}" SelectedItem="{Binding SelectedPacient}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="Посещение: "/>
                                <TextBlock Text="Индентификатор доктора: "/>
                                <TextBlock Text="Диагноз: "/>
                                <TextBlock Text="Рекомендации: "/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="{Binding Appointment, StringFormat='Дата {0:dd.MM.yyyy}'}"/>
                                <TextBlock Text="{Binding IDDoctor}"/>
                                <TextBlock Text="{Binding Diagnosis}"/>
                                <TextBlock Text="{Binding Recomendations}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" Background="AntiqueWhite">
            <Label>Посещений:</Label>
            <Label Content="{Binding Posechenia.Count}"/>
        </StackPanel>
    </Grid>
</Page>
