<Page x:Class="TRPO8.Pages.Vhod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="Vhod">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Введите свой ID:"/>
            <Label Content="Введите пароль:"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Text="{Binding LoginDoctor.ID}" Margin="4" Width="200px"/>
            <TextBox Margin="4" Text="{Binding LoginDoctor.Password}" Width="200px"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Click="LoginButton_Click" Content="Войти" Margin="4"/>
            <Button Click="RegistrButton_Click" Content="Зарегистрироваться" Margin="4"/>
        </StackPanel>
    </Grid>
</Page>
