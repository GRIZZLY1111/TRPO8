<Page x:Class="TRPO8.Pages.MainScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="5">
            <StackPanel Orientation="Horizontal">
                <Button Click="CreatePacientButton_Click" Content="Создать пациента" Margin="4" Width="206"/>
                <Button Click="StartPriemButton_Click" Content="Начать прием" Margin="4" Width="206"/>
                <Button Click="IzmeneniePacientButton_Click" Content="Изменить информацию" Margin="4" Width="206"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="1" Width="310" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Идентификатор:"/>
                    <TextBlock Text="Фамилия:"/>
                    <TextBlock Text="Имя:"/>
                    <TextBlock Text="Отчество:"/>
                    <TextBlock Text="Специальность:"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding CurrentDoctor.ID}"/>
                    <TextBlock Text="{Binding CurrentDoctor.Name}"/>
                    <TextBlock Text="{Binding CurrentDoctor.LastName}"/>
                    <TextBlock Text="{Binding CurrentDoctor.MiddleName}"/>
                    <TextBlock Text="{Binding CurrentDoctor.Specialisation}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <ListView Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Doctor}" SelectedItem="{Binding SelectedDoctor}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Идентификатор: "/>
                            <TextBlock Text="{Binding ID}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Фамилия: "/>
                            <TextBlock Text="{Binding LastName}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Имя: "/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отчество: "/>
                            <TextBlock Text="{Binding MiddleName}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Специализация: "/>
                            <TextBlock Text="{Binding Specialisation}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" Background="AntiqueWhite">
            <Label>Всего в списке:</Label>
            <Label Content="{Binding Doctor.Count}"/>
        </StackPanel>
    </Grid>
</Page>
