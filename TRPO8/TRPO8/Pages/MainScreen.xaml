<Page x:Class="TRPO8.Pages.MainScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="5">
            <StackPanel Orientation="Horizontal">
                <Button Click="CreatePacientButton_Click" Content="Создать пациента" Margin="4" Width="250"/>
                <Button Click="StartPriemButton_Click" Content="Начать прием" Margin="4" Width="250"/>
                <Button Click="IzmeneniePacientButton_Click" Content="Изменить информацию" Margin="4" Width="250"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="1" Width="310" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Идентификатор:"/>
                    <TextBlock Text="Фамилия:"/>
                    <TextBlock Text="Имя:"/>
                    <TextBlock Text="Отчество:"/>
                    <TextBlock Text="Специальность:"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding CurrentDoctor.ID}"/>
                    <TextBlock Text="{Binding CurrentDoctor.LastName}"/>
                    <TextBlock Text="{Binding CurrentDoctor.Name}"/>
                    <TextBlock Text="{Binding CurrentDoctor.MiddleName}"/>
                    <TextBlock Text="{Binding CurrentDoctor.Specialisation}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5">
            <ListView ItemsSource="{Binding Pacients}" SelectedItem="{Binding SelectedPacient}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="Идентификатор: "/>
                                <TextBlock Text="Фамилия: "/>
                                <TextBlock Text="Имя: "/>
                                <TextBlock Text="Отчество: "/>
                                <TextBlock Text="Дата рождения: "/>
                                <TextBlock Text="Номер телефона: "/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="{Binding ID}"/>
                                <TextBlock Text="{Binding LastName}"/>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding MiddleName}"/>
                                <TextBlock Text="{Binding Birthday, StringFormat=' {0:dd.MM.yyyy}'}"/>
                                <TextBlock Text="{Binding PhoneNumber}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" Background="AntiqueWhite">
            <Label>Всего в списке:</Label>
            <Label Content="{Binding Pacients.Count}"/>
        </StackPanel>
    </Grid>
</Page>
