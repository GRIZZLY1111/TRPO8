<Page x:Class="TRPO8.Pages.IzmenenieInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IzmenenieInformation">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="Фамилия пациента"/>
                <Label Content="Имя пациентов:"/>
                <Label Content="Отчество пациента:"/>
                <Label Content="Дата рождения:"/>
                <Label Content="Номер телефона:"/>
                <Button Click="IzmeneniePacientButton_Click" Content="Изменить" Margin="4"/>
                <Button Click="SbrosButton_Click" Content="Сбросить" Margin="4"/>
                <Button Click="BackButton_Click" Content="Назад"  Margin="4"/>
            </StackPanel>
            <StackPanel>
                <TextBox Text="{Binding IzmeneniePacient.LastName}" Margin="4" Width="150px"/>
                <TextBox Text="{Binding IzmeneniePacient.Name}" Margin="4" Width="150px"/>
                <TextBox Text="{Binding IzmeneniePacient.MiddleName}" Margin="4" Width="150px"/>
                <DatePicker SelectedDate="{Binding IzmeneniePacient.Birthday}" Margin="1" Width="150"/>
                <TextBox Text="{Binding IzmeneniePacient.PhoneNumber}" Margin="4" Width="150px"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
