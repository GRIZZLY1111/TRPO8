<Page x:Class="TRPO8.Pages.RegistrDoctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrDoctor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
                <Label Content="Фамилия:"/>
                <Label Content="Имя:"/>
                <Label Content="Отчество:"/>
                <Label Content="Специальность:"/>
                <Label Content="Пароль:"/>
                <Label Content="Подтверждение пароля:"/>
            </StackPanel>
        <StackPanel Grid.Column="1">
                <TextBox Text="{Binding ReadDoctor.LastName}" Margin="4" Width="150px"/>
                <TextBox Text="{Binding ReadDoctor.Name}" Margin="4" Width="150px"/>
                <TextBox Text="{Binding ReadDoctor.MiddleName}" Margin="4" Width="150px"/>
                <TextBox Text="{Binding ReadDoctor.Specialisation}" Margin="4" Width="150px"/>
                <TextBox Text="{Binding ReadDoctor.Password}" Margin="4" Width="150px"/>
                <TextBox Text="{Binding PasswordDoctor.Password}" Margin="4" Width="150px"/>
            </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Click="RegisterButton_Click" Content="Зарегистрироваться"  Margin="4"/>
            <Button Click="BackButton_Click" Content="Назад"  Margin="4"/>
        </StackPanel>
    </Grid>
</Page>
